{
  "trailingComma": "es5",
  "semi": false,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "endOfLine": "auto",
  "printWidth": 100,
  "requirePragma": true,
  "arrowParens": "always",
  "overrides": [
    {
      "files": "{**/*,*}.{css,scss,sass,ts,tsx,json,md,mjs}",
      "excludeFiles": [
        "**/node_modules/**",
        "**/dist/**",
        "**/build/**",
        "**/coverage/**",
        "**/public/**",
        "**/deployment/**"
      ],
      "options": { "requirePragma": false }
    }
  ]
}
